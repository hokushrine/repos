@model UserViewModel

<h1>Admin Index</h1>

<!-- Display all users -->
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Created At</th>
            <th scope="col">Is Admin?</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.allUsers)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.CreatedAt.ToShortDateString()</td>
                <td>@u.IsAdmin</td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-Id="@u.Id">Delete</a></td>
                <td><a asp-controller="Home" asp-action="Logout" asp-route-Id="@u.Id">Profile</a></td>
            </tr>
        }
    </tbody>
</table>