@model Dish
<h1>@Model.Name</h1>
<h3>@Model.Chef</h3>
<hr>
<p>@Model.Description</p>
<h3><strong>Calories: </strong>@Model.Calories</h3>
<h3><strong>Tastiness: </strong>@Model.Tastiness</h3>
<a asp-action="Delete" asp-route-id="@Model.DishID"><button>Delete</button></a>
<a href="/@Model.DishID/edit"><button>Edit</button></a>
@Html.ActionLink("Edit a dish", "Edit", "Home", new { id=Model.DishID }, null)