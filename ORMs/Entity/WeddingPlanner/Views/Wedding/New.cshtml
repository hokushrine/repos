@model Wedding
<h1>Plan Your Wedding</h1>
<form method="post" asp-action="Create" asp-controller="Wedding">
    <div class="form-group row">
        <span asp-validation-for="Bride"></span>
        <label asp-for="Bride"></label>
        <input asp-for="Bride" class="form-control">
    </div>
    <div class="form-group row">
        <span asp-validation-for="Groom"></span>
        <label asp-for="Groom"></label>
        <input asp-for="Groom" class="form-control">
    </div>
    <div class="form-group row">
        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="form-group row">
        <span asp-validation-for="Address"></span>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
    </div>
    <Button>Submit</Button>
</form>