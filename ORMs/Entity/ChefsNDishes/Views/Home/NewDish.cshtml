@model Dish

<h1>Create a new dish</h1>
<form asp-controller="Home" asp-action="CreateDish" asp-method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"> 
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <input asp-for="Calories"> 
    </div>
    <div class="form-group">
        <label asp-for="Creator"></label>
        <select asp-for="ChefId" class="form-control">
            @foreach (var chef in ViewBag.AllChefs)
            {
                <option value="@chef.ChefId">@chef.FullName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness"></label>
        <input asp-for="Tastiness">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="30" rows="10"></textarea>
    </div>
    <button>Add Dish</button>
</form>