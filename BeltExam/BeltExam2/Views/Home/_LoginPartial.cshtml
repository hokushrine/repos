@model LoginUser

<form asp-controller="Home" asp-action="Login" method="post">
    <div class="form-group">
        <div class="form-row">
            <span asp-validation-for="UsernameAttempt"></span>
            <label asp-for="UsernameAttempt"></label>
            <input asp-for="UsernameAttempt" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <span asp-validation-for="PasswordAttempt"></span>
            <label asp-for="PasswordAttempt"></label>
            <input asp-for="PasswordAttempt" class="form-control">
        </div>
    </div>
    <button>Submit</button>
</form>