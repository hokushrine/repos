@model DojoActivity

<h1>Create an Activity</h1>
<div class="row">
    <!-- Add a new Activity -->
  <div class="col-xs-6 col-md-3">
    <form asp-controller="DojoActivity" asp-action="Create" method="post">
            <div class="form-group">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="PlannedDate"></span>
                <label asp-for="PlannedDate"></label>
                <input asp-for="PlannedDate" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="StartTime"></span>
                <label asp-for="StartTime"></label>
                <input asp-for="StartTime" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="EndTime"></span>
                <label asp-for="EndTime"></label>
                <input asp-for="EndTime" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" cols="5" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
  </div>